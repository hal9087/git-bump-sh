    "type": "bin",
    "license": "MIT",
    "authors": [
        {
            "name": "Ruben Barilani",
            "email": "ruben.barilani.dev@gmail.com"
        }
    ],
    "require": {},
    "require-dev" : {
        "hal9087/shunit2-test-runner" : "dev-master"
    },
    "bin": ["bin/bump", "bin/bump_functions.sh"],
